<Window x:Class="Katastata.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Katastata — Мониторинг программ"
        Width="950" Height="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Window.Resources>
        <!-- Эффект тени -->
        <DropShadowEffect x:Key="SoftShadow"
                          BlurRadius="12"
                          ShadowDepth="2"
                          Opacity="0.4"
                          Color="Black"/>
    </Window.Resources>

    <Grid>
        <!-- Верхний бар -->
        <Border Background="{DynamicResource AccentBrush}" Height="50" VerticalAlignment="Top">
            <DockPanel>
                <!-- Название / логотип -->
                <TextBlock Text="KATASTATA"
                           Foreground="{StaticResource AccentBrushActive}"
                           FontSize="20"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"
                           DockPanel.Dock="Left"/>

                <!-- Кнопки справа -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" DockPanel.Dock="Right" Margin="0,0,15,0">
                    <Button x:Name="LightThemeBtn" Content="☀" 
                            Style="{StaticResource ThemeSymbolButtonStyle}" 
                            Click="LightTheme_Click"/>
                    <Button x:Name="DarkThemeBtn" Content="🌙" 
                            Style="{StaticResource ThemeSymbolButtonStyle}" 
                            Click="DarkTheme_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Контент -->
        <Grid Margin="20,70,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Панель управления -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Left" Margin="0,0,0,15">
                <Button Content="⟳ Сканировать"
                        Command="{Binding ScanCommand}"
                        Style="{DynamicResource ThemeButtonStyle}"/>
                <Button Content="🕓 Сессии"
                        Style="{DynamicResource ThemeButtonStyle}"
                        Margin="10,0,0,0"/>
                <Button Content="⚙ Настройки"
                        Style="{DynamicResource ThemeButtonStyle}"
                        Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Таблица -->
            <Border Grid.Row="1"
                    Background="{DynamicResource PanelBackgroundBrush}"
                    CornerRadius="8"
                    Padding="10"
                    Effect="{StaticResource SoftShadow}">
                <DataGrid ItemsSource="{Binding Programs}"
                          AutoGenerateColumns="False"
                          Background="{DynamicResource DataGridBackgroundBrush}"
                          Foreground="{DynamicResource TextForegroundBrush}"
                          HeadersVisibility="Column"
                          RowBackground="{DynamicResource RowBackgroundBrush}"
                          AlternatingRowBackground="{DynamicResource AlternatingRowBackgroundBrush}"
                          BorderThickness="0"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          GridLinesVisibility="None"
                          RowHeight="50">

                    <DataGrid.Resources>
                        <!-- Стиль для заголовков -->
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Foreground" Value="{DynamicResource HeaderForegroundBrush}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                        </Style>

                        <!-- Стиль строк с подсветкой при наведении -->
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="35"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF555555"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="2*"/>
                        <DataGridTextColumn Header="Путь" Binding="{Binding Path}" Width="3*"/>
                        <DataGridTextColumn Header="Категория" Binding="{Binding Category.Name}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>
 