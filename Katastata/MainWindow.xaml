<Window x:Class="Katastata.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Katastata — Мониторинг программ"
        Width="950" Height="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Window.Resources>
        <!-- Эффект тени (оставляем, т.к. не зависит от темы) -->
        <DropShadowEffect x:Key="SoftShadow"
                          BlurRadius="12"
                          ShadowDepth="2"
                          Opacity="0.4"
                          Color="Black"/>
    </Window.Resources>

    <Grid>
        <!-- Верхний бар -->
        <Border Background="{DynamicResource AccentBrush}"
                Height="50"
                VerticalAlignment="Top">
            <DockPanel>
                <TextBlock Text="PENIS"
                           Foreground="{DynamicResource TextForegroundBrush}"
                           FontSize="20"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0" />
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0 5">
                    <Button Content="Светлая тема"
                            Click="LightTheme_Click"
                            Style="{StaticResource ThemeButtonStyle}"
                            Margin="0,0,10,0"/>
                    <Button Content="Тёмная тема"
                            Click="DarkTheme_Click"
                            Style="{StaticResource ThemeButtonStyle}"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Контент -->
        <Grid Margin="20,70,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Панель управления -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Left" Margin="0,0,0,15">
                <Button Content="⟳ Сканировать"
                        Command="{Binding ScanCommand}"
                        Style="{StaticResource ThemeButtonStyle}"/>
                <Button Content="🕓 Сессии"
                        Style="{StaticResource ThemeButtonStyle}"
                        Margin="10,0,0,0"/>
                <Button Content="⚙ Настройки"
                        Style="{StaticResource ThemeButtonStyle}"
                        Margin="10,0,0,0"/>
                <Button Content="Авторизация"
                        Click="AuthClick"
                        Style="{StaticResource ThemeButtonStyle}"
                        Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Таблица -->
            <Border Grid.Row="1"
                    Background="{DynamicResource PanelBackgroundBrush}"
                    CornerRadius="8"
                    Padding="10"
                    Effect="{StaticResource SoftShadow}">
                <DataGrid ItemsSource="{Binding Programs}"
              AutoGenerateColumns="False"
              Background="{DynamicResource DataGridBackgroundBrush}"
              Foreground="{DynamicResource TextForegroundBrush}"
              HeadersVisibility="Column"
              RowBackground="{DynamicResource RowBackgroundBrush}"
              AlternatingRowBackground="{DynamicResource AlternatingRowBackgroundBrush}"
              BorderThickness="0"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              IsReadOnly="True"
              GridLinesVisibility="None"
              RowHeight="50">


                    <DataGrid.Resources>
                        <!-- Стиль для заголовков -->
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Foreground" Value="{DynamicResource HeaderForegroundBrush}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                        </Style>

                        <!-- Анимация строк при наведении -->
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="35"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                To="#FF555555"
                                Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                To="{Binding Background, RelativeSource={RelativeSource Self}}"
                                Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="2*"/>
                        <DataGridTextColumn Header="Путь" Binding="{Binding Path}" Width="3*"/>
                        <DataGridTextColumn Header="Категория" Binding="{Binding Category.Name}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

        </Grid>
    </Grid>
</Window>
