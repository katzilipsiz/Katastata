<Window x:Class="Katastata.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки"
        Height="650" Width="900"
        MinHeight="400" MinWidth="600"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource TextForegroundBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" Orientation="Vertical" 
                    VerticalAlignment="Top">

            <!--  Категории -->
            <Border Style="{StaticResource StatisticCardStyle}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Категории"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="{DynamicResource AccentBrush}"/>
                    <TextBlock Text="Добавь новую категорию для программ:"
                   Margin="0,6,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBox x:Name="NewCategoryName"
                                 Width="250"
                                 Style="{StaticResource ThemeTextBoxStyle}"
                                 Tag="Название категории"/>
                        <Button Content="Создать"
                                Style="{StaticResource ThemeButtonStyle}"
                                Margin="10,0,0,0"
                                CommandParameter="{Binding Text, ElementName=NewCategoryName}"
                                Command="{Binding CreateCategoryCommand}"/>
                    </StackPanel>

                    <!-- Список существующих категорий -->
                    <ListBox Margin="0,10,0,0"
                             ItemsSource="{Binding Categories}"
                             BorderThickness="0"
                             Background="Transparent"
                             HorizontalContentAlignment="Stretch">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Название категории -->
                                    <TextBlock Text="{Binding Name}"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource TextForegroundBrush}"/>


                                    <!-- Кнопка удаления -->
                                    <Button Grid.Column="1"
                                            Content="×"
                                            Style="{StaticResource ThemeSymbolButtonStyle}"
                                            Foreground="Red"
                                            FontSize="14"
                                            Width="30"
                                            Height="30"
                                            Margin="10,0,0,0"
                                            Command="{Binding DataContext.DeleteCategoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding Id}"
                                            ToolTip="Удалить категорию"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </StackPanel>
            </Border>


            <!--  Экспорт -->
            <Border Style="{StaticResource StatisticCardStyle}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Экспорт данных"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{DynamicResource AccentBrush}"/>
                    <TextBlock Text="Сохраните отчёт о программах в Word или Excel." 
                               Margin="0,6,0,10"/>
                    <Button Content="Экспортировать"
                            Style="{StaticResource ThemeButtonStyle}"
                            Width="180"
                            Click="Export_Click"/>
                </StackPanel>
            </Border>

            <!--  Статистика и сессии -->
            <Border Style="{StaticResource StatisticCardStyle}" 
                    Margin="0,0,0,20">
                <StackPanel>
                <TextBlock Text="Общая информация"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{DynamicResource AccentBrush}"/>
                <StackPanel Margin="10" Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <!-- Статистика -->
                    <Button Content="Открыть статистику" 
                            Click="OpenStatistics_Click" 
                            Style="{StaticResource ThemeButtonStyle}" 
                            Width="200"
                            Margin="10"/>

                    <!-- Сессии -->
                    <Button Content="Открыть сессии" 
                            Click="OpenSessions_Click" 
                            Style="{StaticResource ThemeButtonStyle}" 
                            Width="200"
                            Margin="10"/>
                </StackPanel>
                </StackPanel>
            </Border>

            <!--  Темы -->
            <Border Style="{StaticResource StatisticCardStyle}" 
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Темы оформления"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{DynamicResource AccentBrush}"/>
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center">
                        <Button Content="Светлая"
                                Style="{StaticResource ThemeButtonStyle}"
                                Width="150"
                                Click="LightTheme_Click"/>
                        <Button Content="Тёмная"
                                Style="{StaticResource ThemeButtonStyle}"
                                Width="150"
                                Margin="10,0,0,0"
                                Click="DarkTheme_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--  Аккаунт -->
            <Border Style="{StaticResource StatisticCardStyle}">
                <StackPanel>
                    <TextBlock Text="Аккаунт"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{DynamicResource AccentBrush}"/>
                    <TextBlock Text="Удаление аккаунта приведёт к потере всех данных. Будьте осторожны."
                               Margin="0,6,0,10"
                               Foreground="{DynamicResource TextForegroundBrush}"/>
                    <Button Content="Удалить аккаунт"
                            Style="{StaticResource ThemeButtonStyle}"
                            Background="#9D3636"
                            Foreground="White"
                            Width="200"
                            Click="DeleteAccount_Click"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Window>
