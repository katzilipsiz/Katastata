<Window x:Class="Katastata.SessionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Katastata.ViewModels"
        Title="Сессии" Height="400" Width="800"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding Sessions}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Программа" Binding="{Binding ProgramName}" Width="*" />
                <DataGridTextColumn Header="Категория" Binding="{Binding CategoryName}" Width="*" />
                <DataGridTextColumn Header="Начало" Binding="{Binding StartTime}" Width="*" />
                <DataGridTextColumn Header="Конец" Binding="{Binding EndTime}" Width="*" />
                <DataGridTextColumn Header="Длительность" Binding="{Binding Duration}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>