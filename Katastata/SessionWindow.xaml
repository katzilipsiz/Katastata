<Window x:Class="Katastata.SessionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сессии" Height="650" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}">
    
    <Grid Margin="20">

        <StackPanel>
            
        <Button Content="📤 Экспорт"
                Style="{DynamicResource ThemeButtonStyle}" 
                HorizontalAlignment="Left"
                Margin="0,0,0,10"/>
        
        <Border Background="{DynamicResource WindowBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="5">
            <DataGrid ItemsSource="{Binding Sessions}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      RowHeight="35"
                      GridLinesVisibility="None"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      Background="{DynamicResource WindowBackgroundBrush}"
                      Foreground="{DynamicResource TextForegroundBrush}">
                <DataGrid.Resources>
                    <!-- Заголовки -->
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Foreground" Value="{DynamicResource TextForegroundBrush}"/>
                        <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                    </Style>
                    <!-- Строки -->
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#FF2E2E2E"/>
                        <Setter Property="Foreground" Value="{DynamicResource TextForegroundBrush}"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3A3A3A"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Программа" Binding="{Binding ProgramName}" Width="2*"/>
                    <DataGridTextColumn Header="Категория" Binding="{Binding CategoryName}" Width="*"/>
                    <DataGridTextColumn Header="Начало" Binding="{Binding StartTime}" Width="*"/>
                    <DataGridTextColumn Header="Конец" Binding="{Binding EndTime}" Width="*"/>
                    <DataGridTextColumn Header="Длительность" Binding="{Binding Duration}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        </StackPanel>
        
    </Grid>
</Window>
        