<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Assets\Themes\Dark\**" />
    <Compile Remove="Assets\Themes\Light\**" />
    <EmbeddedResource Remove="Assets\Themes\Dark\**" />
    <EmbeddedResource Remove="Assets\Themes\Light\**" />
    <None Remove="Assets\Themes\Dark\**" />
    <None Remove="Assets\Themes\Light\**" />
    <Page Remove="Assets\Themes\Dark\**" />
    <Page Remove="Assets\Themes\Light\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Assets\Fonts\Ledger-Regular.ttf" />
    <None Remove="Assets\Logo\mainlogo.png" />
    <None Remove="Assets\Logo\TextLogo.png" />
    <None Remove="Assets\Templates\App1.png" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Assets\Icons\" />
    <Folder Include="Assets\Themes\" />
    <Folder Include="Models\" />
    <Folder Include="ViewModels\" />
    <Folder Include="Services\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Extended.Wpf.Toolkit" Version="5.0.0" />
    <PackageReference Include="Microsoft.Data.Sqlite" Version="9.0.9" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\Fonts\Ledger-Regular.ttf" />
    <Resource Include="Assets\Logo\mainlogo.png" />
    <Resource Include="Assets\Logo\TextLogo.png" />
    <Resource Include="Assets\Templates\App1.png" />
  </ItemGroup>

</Project>
