<Window x:Class="Katastata.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Katastata"
        mc:Ignorable="d"
        Title="Katastata - Мониторинг времени в программах" 
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="K" FontSize="24" FontWeight="Bold" Foreground="#007ACC"/>
            <TextBlock Text="ATASTATA" FontSize="24" FontWeight="Bold" Foreground="#333333"/>
            <TextBlock Text=" - Мониторинг времени в программах" FontSize="16" Foreground="#666666" 
                       VerticalAlignment="Bottom" Margin="10,0,0,2"/>
        </StackPanel>

        <!-- Список приложений -->
        <GroupBox Grid.Row="1" Header="Отслеживаемые приложения">
            <ListView ItemsSource="{Binding Applications}" 
                      SelectedItem="{Binding SelectedApplication}"
                      SelectionMode="Single">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" Width="40" DisplayMemberBinding="{Binding Id}"/>
                        <GridViewColumn Header="Процесс" Width="150" DisplayMemberBinding="{Binding ProcessName}"/>
                        <GridViewColumn Header="Название" Width="200" DisplayMemberBinding="{Binding FriendlyName}"/>
                        <GridViewColumn Header="Отслеживается" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsTracking}" HorizontalAlignment="Center" 
                                              IsEnabled="False"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <!-- Статус бар -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0" Background="#F0F0F0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding Applications.Count, StringFormat='Всего приложений: {0}'}" FontWeight="Bold"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>