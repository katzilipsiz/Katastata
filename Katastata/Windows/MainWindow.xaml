<Window x:Class="Katastata.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Katastata"
        xmlns:view="clr-namespace:Katastata.Views"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="1080" Width="1920" 
        WindowState="Maximized"
        Icon="/Assets/Logo/MainLogo.png">

    <Window.Resources>

        <SolidColorBrush x:Key="BrownBack1" Color="#281D17"/>
        <SolidColorBrush x:Key="RedBack1" Color="#4B2619"/>
        <SolidColorBrush x:Key="YellowElement1" Color="#E3B662"/>


        <!--Button-->
        <Style TargetType="TextBox">

            <Setter Property="Background"
                Value="{x:Null}"/>

            <Setter Property="BorderThickness"
                Value="0 0 0 2"/>

            <Setter Property="BorderBrush"
                Value="{StaticResource YellowElement1}"/>

            <Setter Property="Foreground"
                Value="White"/>

        </Style>

        <!--Label-->
        <Style TargetType="Label">

            <Setter Property="Foreground"
                Value="White"/>

            <Setter Property="FontFamily"
    Value="C:\Katz-work\College\Курсовая\Katastata\Assets\Fonts\Ledger-Regular.ttf#Ledger"/>

        </Style>

        <!--RadioButton-->
        <Style TargetType="RadioButton">

            


            <!--<Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" 
                        Value="20" />
                </Style>
            </Style.Resources>-->

            <Setter Property="Background"
                Value="{StaticResource RedBack1}"/>

            <Setter Property="VerticalAlignment"
                    Value="Center"/>

            <Setter Property="HorizontalAlignment"
                    Value="Center"/>

            <Setter Property="Foreground"
                Value="{StaticResource YellowElement1}"/>

            <Setter Property="FontSize"
                    Value="28"/>

            <Setter Property="FontFamily"
                Value="C:\Katz-work\College\Курсовая\Katastata\Assets\Fonts\Ledger-Regular.ttf#Ledger"/>

            <Setter Property="BorderThickness"
                Value="0"/>

        </Style>

        <!--Button-->
        <Style TargetType="Button">




            <!--<Style.Resources>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" 
                Value="20" />
        </Style>
    </Style.Resources>-->

            <Setter Property="Background"
        Value="{StaticResource RedBack1}"/>

            <Setter Property="VerticalAlignment"
            Value="Center"/>

            <Setter Property="HorizontalAlignment"
            Value="Center"/>

            <Setter Property="Foreground"
        Value="{StaticResource YellowElement1}"/>

            <Setter Property="FontSize"
            Value="28"/>

            <Setter Property="FontFamily"
        Value="C:\Katz-work\College\Курсовая\Katastata\Assets\Fonts\Ledger-Regular.ttf#Ledger"/>

            <Setter Property="BorderThickness"
        Value="0"/>

        </Style>

    </Window.Resources>

    <Grid Background="{StaticResource BrownBack1}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="382"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" 
              Background="{StaticResource RedBack1}">

            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>


            <Image Source="/Assets/Logo/TextLogo.png" 
                   Margin="75 25"
                   Grid.Row="0"/>

            <RadioButton x:Name="MainButton"
                    Grid.Row="1"
                    Content="Главная" 
                    IsChecked="True" 
                    BorderBrush="{x:Null}" 
                    Background="{StaticResource RedBack1}"
                    Height="80"
                    Width="384"/>

            <RadioButton x:Name="OptimizeButton"
                         Grid.Row="2"
                         Content="Оптимизация" 
                         BorderBrush="{x:Null}" 
                         Background="{StaticResource RedBack1}"
                         Height="80"
                         Width="384"/>

            <RadioButton x:Name="SettingButton"
                         Grid.Row="3"
                         Content="Настройки" 
                         BorderBrush="{x:Null}" 
                         Background="{StaticResource RedBack1}"
                         Height="80"
                         Width="384"/>
            
            <RadioButton x:Name="SystemButton"
                         Grid.Row="4"
                         Content="Система"  
                         BorderBrush="{x:Null}" 
                         Background="{StaticResource RedBack1}"
                         Height="80"
                         Width="384"/>

            <StackPanel Orientation="Horizontal"
                        Grid.Row="7"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="25">

                <Ellipse Width="50"
                         Height="50">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Assets/Logo/mainlogo.png"/>
                    </Ellipse.Fill>
                </Ellipse>

                <Button x:Name="Login"
                        Content="Войти в аккаунт" 
                        BorderBrush="{x:Null}" 
                        Background="{StaticResource RedBack1}"
                        Margin="25 0"
                        />


            </StackPanel>
            

        </Grid>

        <view:MainMenu Grid.Column="1">
            
        </view:MainMenu>

    </Grid>
    
</Window>
