<Window x:Class="Katastata.NewCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новая категория" Height="150" Width="300"
        Icon="/Assets/Logo/MainLogo.png"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Имя категории:" Foreground="{DynamicResource TextForegroundBrush}"/>
            <TextBox x:Name="NameTextBox" Style="{StaticResource ThemeTextBoxStyle}" Margin="0,5,0,10"/>
            <Button Content="Создать" Click="Create_Click" Style="{StaticResource ThemeButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>