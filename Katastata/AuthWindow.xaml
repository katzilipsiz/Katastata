<Window x:Class="Katastata.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Katastata — Вход / Регистрация"
        Width="400" Height="300"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Контейнер для UserControl -->
        <ContentControl x:Name="ContentArea"/>

        <!-- Кнопки переключения -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0 10">
            <Button Content="Вход" Width="120" Margin="5" Click="ShowLoginPage" Foreground="#FF020000"/>
            <Button Content="Регистрация" Width="120" Margin="5" Click="ShowRegisterPage" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>
