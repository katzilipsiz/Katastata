<Window x:Class="Katastata.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="360" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <ContentControl x:Name="ContentArea" Grid.Row="0"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,8">
            <Button Content="Вход" Width="120" Margin="5" Click="ShowLoginPage" />
            <Button Content="Регистрация" Width="120" Margin="5" Click="ShowRegisterPage" />
        </StackPanel>
    </Grid>
</Window>
