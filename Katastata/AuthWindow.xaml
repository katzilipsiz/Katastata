<Window x:Class="Katastata.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация"
        Height="460" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border CornerRadius="12" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource WindowBackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель -->
            <DockPanel Background="#252525" Height="40" LastChildFill="True" VerticalAlignment="Top">
                <TextBlock Text="Katastata — Авторизация"
                           Foreground="{DynamicResource AccentBrush}"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"/>

                <Button Content="✕"
                        Width="35" Height="35"
                        Style="{StaticResource ThemeSymbolButtonStyle}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Click="CloseApp"
                        Margin="0,0,8,0"/>
            </DockPanel>

            <!-- Область контента -->
            <Border Grid.Row="1"
                    Margin="20"
                    Background="#2B2B2B"
                    CornerRadius="10"
                    Padding="20">
                <ContentControl x:Name="ContentArea"/>
            </Border>

            <!-- Нижняя панель кнопок -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,10,0,20">

                <Button Content="Вход"
                        Width="160"
                        Margin="5"
                        Style="{StaticResource ThemeButtonStyle}"
                        Click="ShowLoginPage"/>

                <Button Content="Регистрация"
                        Width="160"
                        Margin="5"
                        Style="{StaticResource ThemeButtonStyle}"
                        Click="ShowRegisterPage"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
