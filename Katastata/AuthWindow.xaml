<Window x:Class="Katastata.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация"
        Height="700" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="/Assets/Logo/MainLogo.png"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">

    <Grid>

        <Border CornerRadius="0"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                Background="{DynamicResource WindowBackgroundBrush}">

            <Grid x:Name="RootGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

            <!-- Верхняя панель -->
                <DockPanel Background="#252525"
                       Height="40"
                       VerticalAlignment="Top"
                       MouseLeftButtonDown="TopBar_MouseLeftButtonDown">
                    <TextBlock Text="Авторизация"
                           Foreground="{DynamicResource AccentBrush}"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Width="100"
                           Margin="200 0 0 0"/>
                    <Button Content="✕"
                        Width="35" Height="35"
                        Style="{StaticResource ThemeSymbolButtonStyle}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Click="CloseApp"
                        Margin="0,0,8,0"/>
                </DockPanel>

                <TextBlock Grid.Row="1"
                       Margin="20"
                       HorizontalAlignment="Center"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{DynamicResource AccentBrush}">
                Добро пожаловать в Katastata!
                </TextBlock>

            <!-- Область контента -->
                <Border Grid.Row="1"
                    Margin="20 100 20 20"
                    CornerRadius="10">
                    <ContentControl x:Name="ContentArea"/>
                </Border>

            <!-- Нижняя панель кнопок -->
                <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,10,0,20">

                    <Button x:Name="LoginButton"
                        Content="Вход"
                        Width="160"
                        Margin="5"
                        Foreground="LightGray"
                        Background="{DynamicResource WindowBackgroundBrush}"
                        Style="{StaticResource ThemeButtonStyle}"
                        Click="ShowLoginPage"/>

                    <Button x:Name="RegisterButton"
                        Content="Регистрация"
                        Width="160"
                        Margin="5"
                        Foreground="LightGray"
                        Background="{DynamicResource WindowBackgroundBrush}"
                        Style="{StaticResource ThemeButtonStyle}"
                        Click="ShowRegisterPage"/>
                </StackPanel>
            </Grid>
        </Border>

    <!-- Оверлей для анимации -->
        <Grid x:Name="SuccessOverlay"
              Background="{DynamicResource WindowBackgroundBrush}"
              Opacity="0"
              Visibility="Collapsed">

        <TextBlock x:Name="SuccessText"
               Text="Успешная авторизация"
               Foreground="{DynamicResource AccentBrush}"
               FontSize="28"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Opacity="100"/>
        </Grid>

    </Grid>
</Window>
