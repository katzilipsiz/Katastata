<Window x:Class="Katastata.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Katastata — Статистика использования" Height="600" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock FontSize="20" FontWeight="Bold" Margin="0,0,0,20">Статистика использования</TextBlock>


            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Период:" VerticalAlignment="Center"/>
                <ComboBox x:Name="PeriodComboBox" Width="150" Margin="10,0,0,0" 
                          SelectionChanged="PeriodComboBox_SelectionChanged">
                    <ComboBoxItem Content="Последняя неделя"/>
                    <ComboBoxItem Content="Последний месяц"/>
                    <ComboBoxItem Content="Всё время"/>
                </ComboBox>

                <Button Content="Сканировать программы ПК" 
        Margin="10,0,0,0"
        Padding="10,5"
        Click="ScanButton_Click"/>

            </StackPanel>

            <GroupBox Header="Топ‑5 приложений" Margin="0,0,0,20">
                <ListView x:Name="TopAppsList">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Приложение" Width="200" DisplayMemberBinding="{Binding app.title}"/>
                            <GridViewColumn Header="Время использования" Width="150" DisplayMemberBinding="{Binding totalTime}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>

            <GroupBox Header="Итого" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock>
                        <Run Text="Общее время:" FontWeight="Bold"/>
                        <Run x:Name="TotalTimeText"/>
                    </TextBlock>
                    <TextBlock>
                        <Run Text="Количество запусков:" FontWeight="Bold"/>
                        <Run x:Name="LaunchCountText"/>
                    </TextBlock>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        
    </Grid>
</Window>
