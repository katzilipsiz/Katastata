<UserControl x:Class="Katastata.Views.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Katastata.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1486">

    <UserControl.Resources>

        <SolidColorBrush x:Key="BrownBack1" Color="#281D17"/>
        <SolidColorBrush x:Key="RedBack1" Color="#4B2619"/>
        <SolidColorBrush x:Key="YellowElement1" Color="#E3B662"/>


        <!--Button-->
        <Style TargetType="TextBox">

            <Setter Property="Background"
            Value="{x:Null}"/>

            <Setter Property="BorderThickness"
            Value="0 0 0 2"/>

            <Setter Property="BorderBrush"
            Value="{StaticResource YellowElement1}"/>

            <Setter Property="Foreground"
            Value="White"/>

        </Style>

        <!--Label-->
        <Style TargetType="Label">

            <Setter Property="Foreground"
            Value="White"/>

            <Setter Property="FontFamily"
                    Value="Katastata;Assets\Fonts\Ledger-Regular.ttf#Ledger"/>

        </Style>

        <!--RadioButton-->
        <Style TargetType="RadioButton">




            <!--<Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" 
                    Value="20" />
            </Style>
        </Style.Resources>-->

            <Setter Property="Background"
            Value="{StaticResource RedBack1}"/>

            <Setter Property="VerticalAlignment"
                Value="Center"/>

            <Setter Property="HorizontalAlignment"
                Value="Center"/>

            <Setter Property="Foreground"
            Value="{StaticResource YellowElement1}"/>

            <Setter Property="FontSize"
                Value="28"/>

            <Setter Property="FontFamily"
                    Value="Katastata;Assets\Fonts\Ledger-Regular.ttf#Ledger"/>

            <Setter Property="BorderThickness"
            Value="0"/>

        </Style>

        <!--Button-->
        <Style TargetType="Button">

            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" 
                            Value="20" />
                </Style>
            </Style.Resources>

            <Setter Property="Background"
    Value="{StaticResource RedBack1}"/>

            <Setter Property="VerticalAlignment"
        Value="Center"/>

            <Setter Property="HorizontalAlignment"
        Value="Center"/>

            <Setter Property="Foreground"
    Value="{StaticResource YellowElement1}"/>

            <Setter Property="FontSize"
        Value="28"/>

            <Setter Property="FontFamily"
                    Value="Katastata;Assets\Fonts\Ledger-Regular.ttf#Ledger"/>

            <Setter Property="BorderThickness"
    Value="0"/>

        </Style>

        <Style x:Key="CornerGrid">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" 
                Value="20"/>
                </Style>
            </Style.Resources>
        </Style>

    </UserControl.Resources>

