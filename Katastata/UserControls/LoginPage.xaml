<UserControl x:Class="Katastata.UserControls.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Логин -->
        <TextBox Grid.Row="0" Margin="0 0 0 10"
                 Text="{Binding LoginUsername, Mode=TwoWay}"
                 />

        <!-- Пароль -->
        <PasswordBox Grid.Row="1" Margin="0 0 0 10"
                     PasswordChanged="LoginPasswordBox_PasswordChanged"/>

        <!-- Кнопка Вход -->
        <Button Grid.Row="2" Content="Войти"
                Command="{Binding LoginCommand}"
                Padding="10" Background="#007ACC" Foreground="White"/>

        <!-- Ошибки -->
        <TextBlock Grid.Row="3" Foreground="Red" Text="{Binding ErrorMessage}"/>
    </Grid>
</UserControl>
