<UserControl x:Class="Katastata.UserControls.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource WindowBackgroundBrush}">

    <Grid Margin="20">
        <Border Background="{DynamicResource PanelBackgroundBrush}"
                CornerRadius="12"
                Padding="20"
                Width="380"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{StaticResource SoftShadow}">
            <StackPanel>

                <!-- Заголовок -->
                <TextBlock Text="Вход"
                           Foreground="{DynamicResource TextForegroundBrush}"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0 0 0 10"
                           HorizontalAlignment="Center"/>

                <!-- Метка и поле логина -->
                <TextBlock Text="Имя пользователя" 
                           Foreground="{DynamicResource TextForegroundBrush}"
                           FontSize="12" Margin="0,6,0,4"/>
                <TextBox Text="{Binding LoginUsername, Mode=TwoWay}"
                         Height="36"
                         Background="#333333"
                         Foreground="{DynamicResource TextForegroundBrush}"
                         BorderBrush="{DynamicResource BorderBrush}"
                         Padding="8"
                         />

                <!-- Метка и поле пароля -->
                <TextBlock Text="Пароль" 
                           Foreground="{DynamicResource TextForegroundBrush}"
                           FontSize="12" Margin="0,12,0,4"/>
                <PasswordBox Height="36"
                             Background="#333333"
                             Foreground="{DynamicResource TextForegroundBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             Padding="8"
                             PasswordChanged="LoginPasswordBox_PasswordChanged"/>

                <!-- Кнопка входа -->
                <Button Content="Войти"
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource ThemeButtonStyle}"
                        Margin="0,18,0,0"
                        HorizontalAlignment="Stretch"/>

                <!-- Сообщение (можно привязать к VM если добавишь свойство) -->
                <TextBlock x:Name="LoginMessage"
                           Text="{Binding LoginMessage, Mode=OneWay}"
                           Foreground="OrangeRed"
                           FontSize="13"
                           Margin="0,10,0,0"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
 