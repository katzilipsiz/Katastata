<UserControl x:Class="Katastata.UserControls.RegisterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource WindowBackgroundBrush}">

    <Grid Margin="20">
        <Border Background="{DynamicResource WindowBackgroundBrush}"
                CornerRadius="12"
                Padding="20"
                Width="380"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel>

                <!-- Заголовок -->
                <TextBlock Text="Регистрация"
                           Foreground="{DynamicResource TextForegroundBrush}"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0 0 0 10"
                           HorizontalAlignment="Center"/>

                <!-- Имя пользователя -->
                <TextBlock Text="Имя пользователя" 
                           Foreground="{DynamicResource TextForegroundBrush}"
                           FontSize="12" Margin="0,6,0,4"/>
                <TextBox Text="{Binding RegisterUsername, Mode=TwoWay}"
                         Height="36"
                         Background="#333333"
                         Style="{StaticResource ThemeTextBoxStyle}"
                         Foreground="{DynamicResource TextForegroundBrush}"
                         BorderBrush="{DynamicResource BorderBrush}"/>

                <!-- Пароль -->
                <TextBlock Text="Пароль" 
                           Foreground="{DynamicResource TextForegroundBrush}"
                           FontSize="12" Margin="0,12,0,4"/>
                <PasswordBox Height="36"
                             Background="#333333"
                             Style="{StaticResource ThemePasswordBoxStyle}"
                             Foreground="{DynamicResource TextForegroundBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             PasswordChanged="RegisterPasswordBox_PasswordChanged"/>

                <!-- Подтверждение пароля -->
                <TextBlock Text="Подтверждение пароля" 
                           Foreground="{DynamicResource TextForegroundBrush}"
                           FontSize="12" Margin="0,12,0,4"/>
                <PasswordBox Height="36"
                             Style="{StaticResource ThemePasswordBoxStyle}"
                             Background="#333333"
                             Foreground="{DynamicResource TextForegroundBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             PasswordChanged="RegisterPasswordConfirmBox_PasswordChanged"/>

                <!-- Кнопка регистрации -->
                <Button Content="Зарегистрироваться"
                        Command="{Binding RegisterCommand}"
                        Style="{StaticResource ThemeButtonStyle}"
                        Width="340"
                        Margin="0,40,0,0"
                        HorizontalAlignment="Stretch"/>

                <TextBlock Text="{Binding LoginMessage, Mode=OneWay}"
                           Foreground="OrangeRed"
                           FontSize="13"
                           Margin="0,10,0,0"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
