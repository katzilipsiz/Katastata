<Window x:Class="Katastata.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Статистика" Height="500" Width="750"
        MinHeight="300" MinWidth="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Grid Margin="10">
        <Border Background="{DynamicResource WindowBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="5">
            <StackPanel>
                <TextBlock Text="Поиск:" Foreground="{DynamicResource TextForegroundBrush}"/>
            <TextBox Text="{Binding FilterText, 
                            UpdateSourceTrigger=PropertyChanged}" 
                     Style="{StaticResource ThemeTextBoxStyle}" 
                     Margin="0,5,0,10"/>
            <!-- DataGrid без внешнего ScrollViewer -->
            <DataGrid ItemsSource="{Binding Statistics}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      RowHeight="35"
                      GridLinesVisibility="None"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      Background="{DynamicResource WindowBackgroundBrush}"
                      Foreground="{DynamicResource TextForegroundBrush}"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">

                <DataGrid.Resources>
                    <!-- Заголовки -->
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Foreground" Value="{DynamicResource TextForegroundBrush}"/>
                        <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                    </Style>

                    <!-- Строки -->
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#FF2E2E2E"/>
                        <Setter Property="Foreground" Value="{DynamicResource TextForegroundBrush}"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3A3A3A"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Программа" Binding="{Binding ProgramName}" Width="2*"/>
                    <DataGridTextColumn Header="Общее время" Binding="{Binding TotalTime}" Width="*"/>
                    <DataGridTextColumn Header="Последний запуск" Binding="{Binding LastLaunch}" Width="*"/>
                </DataGrid.Columns>

            </DataGrid>
                </StackPanel>
        </Border>
    </Grid>
</Window>
