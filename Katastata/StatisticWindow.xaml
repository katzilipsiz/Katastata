<Window x:Class="Katastata.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Katastata.ViewModels"
        Title="Статистика" Height="400" Width="600"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding Statistics}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Программа" Binding="{Binding ProgramName}" Width="*" />
                <DataGridTextColumn Header="Общее время" Binding="{Binding TotalTime}" Width="*" />
                <DataGridTextColumn Header="Последний запуск" Binding="{Binding LastLaunch}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>